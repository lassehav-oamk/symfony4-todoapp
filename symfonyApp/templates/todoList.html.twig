
{% extends 'base.html.twig' %}

{% block title %}Todolist app{% endblock %}

{% block body %}
    <div class="todoList">
        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Due date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for todo in todos %}
                <tr>
                    <td>{{ todo.description }}</td>
                    <td>{{ todo.dueDate | date('d.m.Y')}}</td>
                    <td><a href="#">Mark done</a> | <a href="{{ path('viewTodoItem', {id: todo.id}) }}">View</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}